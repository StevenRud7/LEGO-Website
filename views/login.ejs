<div class="container">
    <div class="row justify-content-center">
        <div class="col-sm-5">
            <div class="card p-4 shadow">
                <h2 class="text-center mb-4">Login</h2>
                <form method="post" action="/login">
                    <div class="mb-3">
                        <label for="loginUsername" class="form-label">Username</label>
                        <input type="text" class="form-control" id="loginUsername" autocomplete="username" name="username" required>
                    </div>
                    <div class="mb-3">
                        <label for="loginPassphrase" class="form-label">Passphrase</label>
                        <input type="password" class="form-control" id="loginPassphrase" autocomplete="current-password" name="passphrase" required>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Login</button>
                    <% if (loginFailed) { %>
                        <p class="text-danger mt-2">Wrong username and/or password</p>
                    <% } %>
                </form>
            </div>
        </div>



        <div class="col-sm-5">
            <div class="card p-4 shadow">
                <h2 class="text-center mb-4">Signup</h2>
                <form method="post" action="/signup">
                    <div class="mb-3">
                        <label for="signupUsername" class="form-label">Username</label>
                        <input type="text" class="form-control" id="signupUsername" autocomplete="username" name="username" required>
                    </div>
                    <div class="mb-3">
                        <label for="signupPassphrase" class="form-label">Password</label>
                        <input type="password" class="form-control" id="signupPassphrase" autocomplete="new-password" name="passphrase" required>
                    </div>
                    <div class="mb-3">
                        <label for="confirmPassphrase" class="form-label">Confirm Password</label>
                        <input type="password" class="form-control" id="confirmPassphrase" name="passphrase2" required>
                    </div>
                    <button type="submit" class="btn btn-success btn-block">Signup</button>
                    <% if (signupFailed) { %>
                        <p class="text-danger mt-2">Username already exists</p>
                    <% } %>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Add this script at the end of the login.ejs file -->
<script>
    // Clear login and signup form inputs if login/signup failed
    const urlParams = new URLSearchParams(window.location.search);
    const loginFailed = urlParams.get('loginFailed');
    const signupFailed = urlParams.get('signupFailed');
    
    if (loginFailed || signupFailed) {
        document.getElementById('loginUsername').value = '';
        document.getElementById('loginPassphrase').value = '';
        document.getElementById('signupUsername').value = '';
        document.getElementById('signupPassphrase').value = '';
        document.getElementById('confirmPassphrase').value = '';
        
        const errorMessage = loginFailed ? 'Wrong username and/or password' : 'Username already exists';
        document.getElementById('errorMessage').textContent = errorMessage;
    }
</script>
